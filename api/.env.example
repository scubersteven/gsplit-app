# Guinness Split the G API - Environment Variables
# Copy this file to .env and update the values

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret Key (REQUIRED in production - generate a secure random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# CORS Origins (comma-separated list of allowed origins)
# Use * for all origins (development only)
CORS_ORIGINS=*

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# File Upload Settings (optional - defaults in config.py)
# MAX_CONTENT_LENGTH=10485760  # 10MB in bytes

# Server Configuration (optional)
# HOST=0.0.0.0
# PORT=5000
